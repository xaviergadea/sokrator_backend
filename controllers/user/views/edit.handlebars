<div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active"><a href="#">Overview</a></li>
            <li><a href="/user">Usuaris</a></li>            
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
               <form role="form" action="/user/{{userview._id}}" method="post">
                  <div class="form-group">
                    <label for="exampleInputNom">Nom personal</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Nom" value="{{userview.name}}">
                  </div>
                   <div class="form-group">
                    <label for="exampleInputEmail1">Nom usuari</label>
                    <input type="email" class="form-control" id="userName" name="userName" placeholder="Usuari" value="{{userview.userName}}">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>                      
                    <input type="password" class="form-control" id="userPwd" name="userPwd" placeholder="Password" value="{{userview.userPwd}}">
                  </div>  
                  <div class="form-group">
                    <label for="exampleInputPassword1">Data naixement</label>                      
                    <input type="date" class="form-control" id="birthdate" name="birthdate" placeholder="Password" value="{{userview.formatDateBirthInvers}}">
                  </div>                   
                   <div class="checkbox">
                    <label>                        
                      <input type="checkbox" name="isAdmin" checked="{{userview.isAdmin}}"> 
                    </label>
                  </div>
                   <input type="hidden" name="_method" value="put">                 
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
            
        </div>
    </div>
</div>
